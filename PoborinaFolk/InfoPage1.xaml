                            ]]>
                        </x:String>
                    </magic:CssGradientSource>
                </magic:GradientView.GradientSource>
                </magic:GradientView>
                <ContentPresenter/>
                </Grid>
        </ControlTemplate>
    </ResourceDictionary>
    </ContentPage.Resources>
            <StackLayout>
                <pv:PancakeView CornerRadius="0,0,50,0"  HorizontalOptions="FillAndExpand" VerticalOptions="Start">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Image Aspect="AspectFill" Grid.RowSpan="2" Source="imageInfo.png"/>
                            <Grid Grid.Row="1" HeightRequest="80" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                <BoxView BackgroundColor="Black" Opacity="0.7" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                                <StackLayout Margin="40,0" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
                                    <Label Text="INFORMACION DE UTILIDAD" TextColor="White" FontSize="17"/>
                                </StackLayout>
                            </Grid>
                        </Grid>
                    </pv:PancakeView>


        <pv:PancakeView HasShadow="True" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundGradientAngle="180">
      
        <Grid RowSpacing="30" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
          
            
            <CollectionView Grid.Row="0" Margin="20,0" ItemsSource="{Binding InfoList}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
              
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid BackgroundColor="#a88c47" Opacity="0.7" Padding="15,10" HorizontalOptions="FillAndExpand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <pv:PancakeView HasShadow="True" HeightRequest="40" WidthRequest="40" CornerRadius="20" HorizontalOptions="Start" VerticalOptions="Center" 
                                            BackgroundGradientAngle="180">
                                <pv:PancakeView.BackgroundGradientStops>
                                    <pv:GradientStopCollection>
                                        <pv:GradientStop Color="#E3E7EE" Offset="0" />
                                        <pv:GradientStop Color="#FBFBFB" Offset="1" />
                                    </pv:GradientStopCollection>
                                </pv:PancakeView.BackgroundGradientStops>
                                <Image Source="{Binding Image}" WidthRequest="30" HeightRequest="30" HorizontalOptions="Center" VerticalOptions="Center" />
                            </pv:PancakeView>

                            <StackLayout VerticalOptions="Center" HorizontalOptions="Start" Margin="55,0,0,0">
                                <Label Text="{Binding Information}" TextColor="Black" FontSize="17"/>
                                <Label Text="{Binding PhoneNumber}" TextColor="Black" FontSize="14" Opacity="0.5"/>
                                <Label Text="{Binding InformationAdd}" TextColor="Black" FontSize="14" Opacity="0.5"/>
                               
                            </StackLayout>
                             <ImageButton Source="{Binding PhoneImage}" WidthRequest="50" HeightRequest="50" HorizontalOptions="End" VerticalOptions="End" />
                           
                                
                           
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </pv:PancakeView>
                </StackLayout>







</ContentPage>

